{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "open-cowork",
  "version": "0.1.0",
  "identifier": "com.devagentforge.opencowork",
  "build": {
    "frontendDist": "../dist-react",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "bun run dev:react",
    "beforeBuildCommand": "bun run build && node scripts/tauri-clean-dmg.mjs"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "open-cowork",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
